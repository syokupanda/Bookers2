<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h1>User info</h1>

      <h1 class="mt-3">New book</h1>
      <%= form_with model: @book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <tr>
          <th>Title</th>
          <th>Opinion</th>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to book_path(book.id) do %>
              <p><%= book.title %></p>
            <% end %>
          </td>
          <td>
            <p><%= book.body %></p>
          </td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
