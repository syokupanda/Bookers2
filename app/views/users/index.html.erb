<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <%= render 'books/book', book: @book, user: @user %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      <% @users.each do |users| %>
        <tr>
         　<td>
         　  <%= link_to user_path(users) do %>
         　    <%= attachment_image_tag users, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
         　  <% end %>
         　</td>
         　<td>
         　   <%= users.name %>
         　</td>
         　<td>
            <%= link_to 'Show', user_path(users) %>
         　</td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>